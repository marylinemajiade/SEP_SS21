<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>


<GridPane fx:controller="GUI.loginController" alignment="CENTER" hgap="20" vgap="20" xmlns:fx="http://javafx.com/fxml"
          xmlns="https://javafx.com/javafx" >
<padding>
    <Insets bottom="25" left="25" right="25" top="25" />
</padding>

<Text text="Login" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

<Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

<TextField fx:id="userNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

<Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

<PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

<HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
    <Button onAction="#loggeBenutzerEin" layoutX="544.0" layoutY="131.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="109.0" text="Einloggen" />
    <Button onAction="#registriereBenutzer" layoutX="544.0" layoutY="131.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="109.0" text="Registrieren" />

</HBox>


    <Label fx:id="errorMessage" GridPane.columnIndex="1" GridPane.rowIndex="5" wrapText="true" />

<columnConstraints>
    <ColumnConstraints />
    <ColumnConstraints />
</columnConstraints>
<rowConstraints>
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
</rowConstraints>
</GridPane>
